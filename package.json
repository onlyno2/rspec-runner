{
  "name": "rspec-runner",
  "displayName": "rspec-runner",
  "description": "Quickly run rspec on vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rspec-runner.runAll",
    "onCommand:rspec-runner.runFile",
    "onCommand:rspec-runner.runLine"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ruby",
        "extensions": [
          ".rb"
        ],
        "filenamePatterns": [
          "*_spec.rb"
        ]
      }
    ],
    "commands": [
      {
        "command": "rspec-runner.runAll",
        "title": "Rspec Runner: Run all spec"
      },
      {
        "command": "rspec-runner.runFile",
        "title": "Rspec Runner: Run current spec file"
      },
      {
        "command": "rspec-runner.runLine",
        "title": "Rspec Runner: Run current spec line"
      }
    ],
    "keybindings": [
      {
        "command": "rspec-runner.runFile",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorLangId == 'ruby'"
      },
      {
        "command": "rspec-runner.runLine",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+f",
        "when": "editorLangId == 'ruby'"
      }
    ]
  },
  "keywords": [
    "Rails",
    "Rspec",
    "Vscode",
    "Ruby"
  ],
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
